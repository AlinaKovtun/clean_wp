<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Articles</h1>
  
  <%= grid(@grid) do |g|
    g.column name: "ID" do |a|
      a.id
    end

    g.column  name: "Title" do |a|
      a.title
    end

    g.column name: "Body" do |a|
      a.body
    end

    g.column name: "Created" do |a|
      a.created_at
    end
  end -%>
</div>

